form(method="post" action="organizer/newGame" class="mt-3 d-flex flex-column") 
    div.form-group
        label(for='date') Date
        input(type='date' id='date' class='form-control' required=true)
    div.form-group
        label(for='time') Time
        input(type='time' id='time' class='form-control' required=true)
    div.form-group
        label(for='venue') Venue
        select(type='select' id='venue' name='venue' class='form-control' required=true) 
            option Select
            for venue in venues
                option(value=venue.name) #{venue.name}
        button(type='button' id='addVenue' class='btn btn-outline-secondary float-right btn-sm mt-2') Add Venue
    div.form-group
        label(for='skillLevel') Skill Level
        select(type='select' id='skillLevel' name='skillLevel' class='form-control')
            option Select
            for skillLevel in skillLevels
                option(value=skillLevel.name) #{skillLevel.name}
    div.form-group
        label(for='price') Price
        div(style='position: relative')
            p(class="static") $
            input(type='number' id='price' step='0.01' class='form-control')
    div.form-group
        label(for='capacity') Capacity
        input(type='number' id='capacity' class='form-control')
    button(type='submit' class='btn btn-primary align-self-end') Submit 